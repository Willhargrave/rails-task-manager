<div class="container">
<h1>My Tasks</h1>
<div class="d-grid gap-3">
<div style="width: 18rem;"><%= link_to "Add New Task",  new_task_path, class: "btn btn-primary"%></div>
<% @tasks.each do |task| %>
<div class="card" style="width: 18rem;">
   <h2 class="card-title"><%= link_to task.title, task_path(task)%></h2>
  <p class="card-body"><%= link_to "Done", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-success"%></p>
</div>
<% end%>

</div>




</div>
